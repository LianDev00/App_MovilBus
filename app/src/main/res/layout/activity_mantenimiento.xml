<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#ffffff"
    android:padding="16dp"
    tools:context=".MantenimientoActivity">

    <!-- Título MovilBus -->
    <TextView
        android:id="@+id/titleMovilBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="MovilBus"
        android:textColor="#8F8884"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bienvenida -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Bienvenido Usuario"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleMovilBus" />

    <!-- Cuadrícula de botones -->
    <!-- Botón 1 -->

    <!-- Botón 2 -->

    <LinearLayout
        android:id="@+id/btnConductor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_container"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:id="@+id/imageBtnConductor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="conductores"
            android:src="@drawable/conductor"
            app:tint="#FF6F26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="conductores"
            android:textAlignment="center"
            android:textColor="#3D3D3D" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSupervisor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_container"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnConductor"
        app:layout_constraintTop_toTopOf="@id/btnConductor"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:id="@+id/imageBtnSupervisor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="supervisores"
            android:src="@drawable/supervisor"
            app:tint="#FF6F26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="supervisores"
            android:textAlignment="center"
            android:textColor="#3D3D3D" />
    </LinearLayout>

    <!-- Botón 3 -->
    <LinearLayout
        android:id="@+id/btnAdministrador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_container"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConductor"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:id="@+id/imageBtnAdministrador"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="administradores"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
