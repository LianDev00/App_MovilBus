<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres"
                android:textColor="#3D3D3D"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/inputNombresBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Ingresar nombres"
                android:inputType="textPersonName|textCapWords"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#3D3D3D"
                android:textColorHint="#933100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apellidos"
                android:textColor="#3D3D3D"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/inputApellidosBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Ingresar apellidos"
                android:inputType="textPersonName|textCapWords"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#3D3D3D"
                android:textColorHint="#933100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="DNI"
                android:textColor="#3D3D3D"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/inputDNIBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Número de DNI"
                android:inputType="number"
                android:maxLength="8"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#3D3D3D"
                android:textColorHint="#933100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Usuario"
                android:textColor="#3D3D3D"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/inputUsuarioBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Nombre de usuario"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#3D3D3D"
                android:textColorHint="#933100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña"
                android:textColor="#3D3D3D"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/inputContrasenaBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#3D3D3D"
                android:textColorHint="#933100" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuscarSup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Buscar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:backgroundTint="#FF6F26"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:backgroundTint="#FF6F26"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Eliminar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:backgroundTint="#D32F2F" app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>