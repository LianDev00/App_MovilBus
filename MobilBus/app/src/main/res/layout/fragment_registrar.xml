<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtTipoTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Tarea"
            android:paddingTop="16dp" />
        <!-- Campo Origen o Destino (ComboBox) -->
        <Spinner
            android:id="@+id/spinnerTipoTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placa_del_veh_culo"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/campo_de_placa_del_veh_culo" />

        <!-- Campo Conductor -->
        <EditText
            android:id="@+id/edtConductor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/conductor"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/campo_de_conductor" />
        <EditText
            android:id="@+id/edtFechaLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Limite"
            android:text=""
            android:inputType="date"
            android:focusable="true"
            android:clickable="true"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/campo_de_fecha"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="ContentDescription" />

        <!-- BotÃ³n Registrar -->
        <Button
            android:id="@+id/btnRegistrarTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrar"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:importantForAccessibility="yes"
            android:contentDescription="RegistrarTarea" />

    </LinearLayout>

</FrameLayout>